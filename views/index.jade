doctype html
html
    head
        title= "Contact Form"
        link(rel='stylesheet', href='/stylesheets/style.css')
    body

.container
    form#contact(action='', method='post')
        h3| Quick Contact

        h4| Contact us Form :)
        fieldset
            input(placeholder='Your name', name = "username", type='text', tabindex='1', required='', autofocus='')
        fieldset
            input(placeholder='Your Email Address', name = 'email', type='email', tabindex='2', required='')
        fieldset
            input(placeholder='Your Phone Number', name ='contactno', type='tel', tabindex='3', required='')
        fieldset
            textarea(placeholder='Type your Message Here....',name ='comment' tabindex='5', required='')

        fieldset
            button#contact-submit(name='submit', type='submit', data-submit='...Sending') Submit
